<div class="alert alert-success" role="alert"><%= notice %></div>

<section class="header-schedule" style="height: auto; margin-top: 30px;" >
  <table class="table-admin">
    <caption style="margin-bottom: 40px">
      <h1 style="min-height: 0;"> Seznam vyučujících</h1>
      <div class="button-box">
        <%= link_to 'NOVÝ VYUČUJÍCÍ', new_admin_teacher_path, class: 'button-admin' %>
      </div>
    </caption>

    <tr>
      <td style="text-align: center">Jméno</td>
      <td style="text-align: center">Příjmení</td>
      <td style="text-align: center">E-mail</td>
      <td style="text-align: center"></td>
      <td></td>
    </tr>

    <% @teachers.each do |teacher| %>
        <tr>
          <th><%= teacher.first_name %></th>
          <th><%= teacher.last_name %></th>
          <th><%= teacher.email %></th>
          <th><%= link_to 'UPRAVIT', edit_admin_teacher_path(teacher), class: 'button-admin-edit' %></th>
          <th><%= link_to 'SMAZAT', teacher, class: 'button-admin-remove', method: :delete, data: {confirm: 'Are you sure?' } %></th>
        </tr>
    <% end %>

  </table>
</section>